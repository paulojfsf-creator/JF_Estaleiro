{
  "typography": {
    "font_family": {
      "headings": "Chivo, sans-serif",
      "body": "Inter, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "weights": {
      "headings": "900",
      "body": "400",
      "bold": "700"
    },
    "sizes": {
      "h1": "text-4xl md:text-5xl tracking-tight",
      "h2": "text-3xl tracking-tight",
      "h3": "text-2xl tracking-tight",
      "body": "text-base leading-relaxed",
      "small": "text-sm leading-normal",
      "tiny": "text-xs tracking-wide uppercase"
    }
  },
  "colors": {
    "theme": "light",
    "palette": {
      "primary": {
        "DEFAULT": "#0F172A",
        "foreground": "#F8FAFC"
      },
      "secondary": {
        "DEFAULT": "#F1F5F9",
        "foreground": "#0F172A"
      },
      "accent": {
        "DEFAULT": "#F59E0B",
        "foreground": "#0F172A"
      },
      "background": "#F8FAFC",
      "surface": "#FFFFFF",
      "border": "#E2E8F0",
      "muted": "#64748B",
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444"
    },
    "gradients": {
      "primary": "none",
      "subtle": "linear-gradient(to bottom right, #F8FAFC, #F1F5F9)"
    }
  },
  "layout": {
    "grid_system": {
      "dashboard": "grid grid-cols-1 md:grid-cols-4 gap-4",
      "marketing": "grid grid-cols-1 md:grid-cols-12 gap-8"
    },
    "spacing": {
      "container_padding": "p-6 md:p-8",
      "section_gap": "gap-8",
      "component_gap": "gap-4"
    },
    "container": {
      "max_width": "max-w-7xl mx-auto",
      "alignment": "center"
    }
  },
  "components": {
    "radius": "rounded-sm",
    "shadows": {
      "card": "shadow-sm hover:shadow-md transition-shadow duration-200",
      "dropdown": "shadow-lg border border-slate-200"
    },
    "buttons": {
      "primary": "bg-slate-900 text-white hover:bg-slate-800 rounded-sm font-medium px-6 py-2.5 transition-all active:scale-95",
      "secondary": "bg-white border border-slate-200 text-slate-900 hover:bg-slate-50 rounded-sm font-medium px-6 py-2.5 transition-all",
      "ghost": "hover:bg-slate-100 text-slate-700 rounded-sm px-4 py-2"
    },
    "cards": {
      "style": "bg-white border border-slate-200 rounded-sm p-6"
    },
    "inputs": {
      "style": "bg-white border border-slate-300 rounded-sm px-4 py-2 focus:ring-2 focus:ring-slate-900 focus:border-transparent outline-none transition-all"
    }
  },
  "visual_enhancers": {
    "textures": "bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-[0.03]",
    "glassmorphism": "backdrop-blur-md bg-white/80 border border-white/20 shadow-sm",
    "borders": "border border-slate-200"
  },
